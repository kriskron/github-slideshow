trigger:
  branches:
    include:
    - master
  paths:
    include:
      - 'terraform/aks/**'

variables:
  - group: confluent_vars

pool:
  vmImage: 'ubuntu-latest'

stages:
  - stage: terraform
    displayName: 'Deploy AKS'
    jobs:
      - job: terraform_plan_aks
        steps:
          - script: |
          echo $(ARM_CLIENT_ID)
          echo $(ARM_CLIENT_SECRET)
          echo $(ARM_TENANT_ID)
          export DEPLOY_ENV=$(DEPLOY_ENV)
          make apply
        displayName: 'Test'
        
